{% extends 'base.html.twig' %}

{% block title %}
	Accueil
{% endblock %}

{% block header %}{% endblock %}

{% block body %}
	<h1>super-location</h1>
	<p>location vacance été</p>
	<a href="/create">go to creation</a>

	<section>

		{% for dispo in dispos %}
			<div class="donnée">
				<p>{{dispo.startDate |date('d/m/Y')}}</p>
				<p>{{dispo.endDate|date('d/m/Y')}}</p>
				<p>{{dispo.price}}</p>
				<p>Disponible:
					{{ dispo.available == 1 ? 'oui' : 'non' }}</p>
				<p>Nom de la voiture:
					{{ dispo.linkCar.brand }}</p>
				<p>Modèle de la voiture:
					{{ dispo.linkCar.model }}</p>
			</div>
		{% endfor %}

	</section>
{% endblock %}

